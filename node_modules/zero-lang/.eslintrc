{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint-config-airbnb"
  ],
  "globals": {
    "chai": true
  },
  "rules": {
    "no-param-reassign": 1,
    "no-restricted-syntax": 1,
    "prefer-rest-params": 1,
    "import/no-unresolved": 1,
    "strict": 1,
    "max-len": [
      2,
      120,
      4,
      {
        "ignoreUrls": true
      }
    ],
    "comma-dangle": [
      2,
      "never"
    ],
    "id-length": [
      2,
      {
        "min": 1
      }
    ]
  }
}
